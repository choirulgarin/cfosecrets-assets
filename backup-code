<style>
  #accordion {
    margin-top: -20px;
    font-family: "Trebuchet MS", system-ui, sans-serif;
  }

  .accordion-item {
    cursor: pointer;
    padding: 20px 40px 20px 0;
    gap: 0.5rem;
    position: relative;
  }

  .accordion-item:not(:last-of-type) {
    border-bottom: 1px solid;
    border-bottom-color: rgba(0, 0, 0, 0.1);
  }

  .accordion-item:before,
  .accordion-item:after {
    content: "";
    width: 16px;
    height: 16px;
    background-size: 100%;
    position: absolute;
    right: 0;
    top: 28px;
    transform: rotate(-90deg);
    transition: all ease-in .1s;
  }

  .accordion-item:before {
    background-image: url(https://beehiiv-images-production.s3.amazonaws.com/uploads/asset/file/a4018634-7535-4fc0-8356-3d9bd93e7c74/icon-min.png?t=1746307800);
  }

  .accordion-item:after {
    background-image: url(https://beehiiv-images-production.s3.amazonaws.com/uploads/asset/file/6c7e94e6-cdf0-42bc-a9ad-0b1c01a14785/icon-plus.png?t=1746307788);
  }

  .accordion-item h3 {
    font-weight: bold;
    font-size: 20px;
  }

  .accordion-item p {
    height: 0;
    opacity: 0;
    margin-top: 0;
    interpolate-size: keywords;
    visibility: hidden;
    transition: all ease-in .3s;
    color: #666;
  }

  .accordion-item a {
    text-decoration: underline;
  }

  .accordion-item.is-active p {
    height: auto;
    visibility: visible;
    opacity: 100;
    margin-top: 4px;
  }

  .accordion-item.is-active:before,
  .accordion-item.is-active:after {
    transform: rotate(0deg);
  }

  .accordion-item.is-active:after {
    opacity: 0;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const accordion = document.getElementById("accordion");
    const items = accordion.querySelectorAll(".accordion-item");

    items.forEach((item) => {
      item.addEventListener("click", () => {
        // Remove 'is-active' from all items
        items.forEach(i => i.classList.remove("is-active"));
        // Add 'is-active' to the clicked item
        item.classList.add("is-active");
      });
    });
  });
</script>